<script type="module" src="/static/js/frontend-telemetry.js"></script>
<script>
            function getPreferredTheme() {
                const savedTheme = localStorage.getItem('theme');
                if (savedTheme) {
                    return savedTheme;
                }
                
                if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
                    return 'dark';
                }
                
                return 'light';
            }

            function applyTheme(theme) {
                if (theme === 'dark') {
                    document.documentElement.classList.add('dark-mode');
                    document.getElementById('themeToggle').innerHTML = '<span class="icon">‚òÄÔ∏è</span>';
                } else {
                    document.documentElement.classList.remove('dark-mode');
                    document.getElementById('themeToggle').innerHTML = '<span class="icon">üåô</span>';
                }
                localStorage.setItem('theme', theme);
            }

            function toggleTheme() {
                const isDark = document.documentElement.classList.contains('dark-mode');
                applyTheme(isDark ? 'light' : 'dark');
            }

            document.addEventListener('DOMContentLoaded', () => {
                applyTheme(getPreferredTheme());
            });

            document.addEventListener('DOMContentLoaded', function() {
                const mobileMenuToggle = document.getElementById('mobileMenuToggle');
                const mainNav = document.getElementById('mainNav');
                
                if (mobileMenuToggle && mainNav) {
                    // Toggle menu on hamburger button click
                    mobileMenuToggle.addEventListener('click', function(event) {
                        event.stopPropagation();
                        mainNav.classList.toggle('active');
                        
                        // Change icon when menu is open
                        const menuIcon = mobileMenuToggle.querySelector('.menu-icon');
                        if (mainNav.classList.contains('active')) {
                            menuIcon.textContent = '‚úï'; // Use X when menu is open
                        } else {
                            menuIcon.textContent = '‚ò∞'; // Use hamburger when closed
                        }
                    });
                    
                    // Close menu when clicking outside
                    document.addEventListener('click', function(event) {
                        if (mainNav.classList.contains('active') && 
                            !mainNav.contains(event.target) && 
                            !mobileMenuToggle.contains(event.target)) {
                            mainNav.classList.remove('active');
                            mobileMenuToggle.querySelector('.menu-icon').textContent = '‚ò∞';
                        }
                    });
                    
                    // Close menu when a link is clicked
                    const navLinks = mainNav.querySelectorAll('a');
                    navLinks.forEach(link => {
                        link.addEventListener('click', function() {
                            mainNav.classList.remove('active');
                            mobileMenuToggle.querySelector('.menu-icon').textContent = '‚ò∞';
                        });
                    });
                    
                    // Hide menu toggle if no nav items
                    if (navLinks.length === 0) {
                        mobileMenuToggle.style.display = 'none';
                    }
                }
            });
</script>
</body>
</html>
